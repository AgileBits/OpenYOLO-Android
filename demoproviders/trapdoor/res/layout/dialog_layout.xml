<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/trapdoor_icon_contentDescription"
        app:srcCompat="@drawable/app_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/pin_prompt"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <me.philio.pinentry.PinEntryView
        android:id="@+id/pin_entry_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:accentType="character"
        app:digitBackground="@android:color/white"
        app:digitHeight="20dp"
        app:digitTextColor="@color/black_54pc"
        app:digitTextSize="8dp"
        app:digitWidth="20dp"
        app:numDigits="6" />

</LinearLayout>